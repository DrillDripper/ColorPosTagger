{
    "manifest_version": 2,
    "name": "Color Parser",
    "version": "1.0",
    "icons": {
        "16": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128":"icons/icon128.png"
    },
    "description": "英語のサイトの文章を品詞分類して、色をつけて読みやすくします。",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "jquery-3.0.0.min.js",
                "build.js",
                "change-color.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        //To be Event Pages
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/icon_before.png",
        "default_title": "Color Parser"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "options_ui": {
        // Required.
        "page": "options.html",
        // Recommended.
        "chrome_style": true
        // Not recommended; only provided for backwards compatibility,
        // and will be unsupported in a future version of Chrome (TBD).
        //"open_in_tab": true
    }
}