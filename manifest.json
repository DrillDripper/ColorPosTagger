{
    "manifest_version": 2,
    "name": "カラフル英語品詞分類",
    "version": "1.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128":"icons/icon128.png"
    },
    "description": "英語を品詞分類して色分けすることで、ウェブサイトを読みやすくします。",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "src/jquery-3.0.0.min.js",
                "src/pos-bundle.js",
                "src/change-color.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ],
        //To be Event Pages
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/icon_before.png",
        "default_title": "Color Parser"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "options_ui": {
        // Required.
        "page": "src/options.html",
        // Recommended.
        "chrome_style": true
    }
}