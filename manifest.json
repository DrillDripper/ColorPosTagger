{
    "manifest_version": 2,
    "name": "Color Parser",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "jquery-3.0.0.min.js",
                "build.js",
                "change-color.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        //To be Event Pages
        "persistent": false
    },
    "browser_action": {
        "default_icon": "19px.png",
        "default_title": "Color Parser"
    },
    "permissions": [
        "tabs"
    ]
}